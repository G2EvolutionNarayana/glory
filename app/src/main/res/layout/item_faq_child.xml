<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:elevation="3dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <RelativeLayout
        android:id="@+id/xRelayMain"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xTvQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Glory"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/xIvArrow"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorAccent"/>
        <ImageView
            android:id="@+id/xIvArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/xTvQuestions"
            android:layout_marginRight="15dp"
            android:layout_alignBottom="@+id/xTvQuestions"
            android:src="@drawable/ic_expand_more"

            android:layout_alignParentRight="true"/>





    </RelativeLayout>
        <TextView
            android:id="@+id/xTvAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/xIvArrow"
            android:textSize="13dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"/>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/grey1"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>