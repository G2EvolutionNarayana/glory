<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cricketground"
    tools:context=".Activity.LivePreview7MainActivity">
    <ImageView
        android:id="@+id/xIvCross7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>
    <ImageView
        android:id="@+id/xIv7Refress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:id="@+id/xReLayHitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xMiddle"
        android:layout_marginBottom="50dp"

        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Selected Hitter"
            android:textColor="@color/white"/>
        <RelativeLayout
            android:id="@+id/xRelayHitter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/xMainHitter7"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/player" />

            <Button
                android:id="@+id/xBtnHitterName7"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/xMainHitter7"
                android:layout_marginTop="-10dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/roboto_bold"
                android:text="l. narayan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/xTvHiiterPoints7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xBtnHitterName7"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="199 pt"
                android:textColor="@color/white"
                android:textSize="12dp" />


        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/xMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/player27"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
