<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/top_curved_dialog"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Deadline passed"
                android:gravity="center"
                android:layout_toLeftOf="@+id/xIvCancel"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="true"
                android:textSize="14dp"
                />
            <ImageView
                android:id="@+id/xIvRefreshCancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clear"
                android:paddingRight="15dp" android:layout_alignParentRight="true"/>
        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sorry, The deadline for this match has passed. Try your skills on another match"
            android:gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/xTvGoHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Home"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"
            android:background="@drawable/gray_rounded_background"
            android:layout_marginTop="15dp"
            android:textSize="12dp"
            android:gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>