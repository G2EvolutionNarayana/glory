<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".60"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/xTvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Narayana Reddy 123"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                  />
                <TextView
                    android:id="@+id/xTvWonMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="YOU WON 60"
                    android:textColor="@color/greencolor"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_bold"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_trophy"
                   />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/xTvPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="660 pts"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14dp"
                    />
                <TextView
                    android:id="@+id/xTvPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="410 pts"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="8dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entry Fee"
                    android:maxLines="1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/xTvEntryFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:gravity="center"
                    android:textColor="@color/greencolor"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_bold"
                    android:drawablePadding="10dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>