                      android:hint=" State "
                      android:padding="8dp"
                      android:singleLine="true"
                      android:textSize="13dp" />
              </LinearLayout>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="25dp"
