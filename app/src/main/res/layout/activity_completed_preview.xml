<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cricketground"

    tools:context="com.glory.apk.Activity.CompletedPreviewActivity">
    <ImageView
        android:id="@+id/xIvCross"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cross"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/xIvRefress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/xMiddle"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/xMainHitter"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/player" />

            <Button
                android:id="@+id/xBtnHitterName"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/xMainHitter"
                android:layout_marginTop="-10dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/roboto_bold"
                android:text="l. narayan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/xTvHitterPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xBtnHitterName"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="199 pt"
                android:textColor="@color/white"
                android:textSize="12dp" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/xMiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/player2"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/player" />

                <Button
                    android:id="@+id/xBtnPlayer2Name"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/player2"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/roboto_bold"
                    android:text="l. narayan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/xTvPlayer2Points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xBtnPlayer2Name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="199 pt"
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/player3"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/player" />

                <Button
                    android:id="@+id/xBtnPlayer3Name"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/player3"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/roboto_bold"
                    android:text="l. narayan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/xTvPlayer3Points"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xBtnPlayer3Name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="199 pt"
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/player4"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/player" />

                <Button
                    android:id="@+id/xBtnPlayer4Name"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/player4"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/roboto_bold"
                    android:text="l. narayan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/xTvPlayer4Points"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/xBtnPlayer4Name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="199 pt"
                    android:textColor="@color/white"
                    android:textSize="12dp" />


            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/xMiddle"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/xPlayer5"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/player" />

            <Button
                android:id="@+id/xBtnPlayer5Name"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/xPlayer5"
                android:layout_marginTop="-10dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/roboto_bold"
                android:text="l. narayan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/xTvPlayer5Points"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xBtnPlayer5Name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="199 pt"
                android:textColor="@color/white"
                android:textSize="12dp" />


        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="411"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Total Points"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>




    </RelativeLayout>
</RelativeLayout>