<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewprofile"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:src="@drawable/glorylogo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOW TO PLAY ? "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:id="@+id/imgcancel"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/cancel4"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:tint="@color/black"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp">



            <RelativeLayout
                android:id="@+id/relativeintroduction"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bordergrey"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Introduction"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/imgintroduction"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:tint="@color/black"
                    android:src="@drawable/right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativecreate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bordergrey"
                android:padding="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Create your team"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/imgcreate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:tint="@color/black"
                    android:src="@drawable/right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativemanaging"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bordergrey"
                android:padding="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Managing your team"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/imgmanaging"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:tint="@color/black"
                    android:src="@drawable/right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativebalance"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bordergrey"
                android:padding="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Account Balance"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/imgbalance"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:tint="@color/black"
                    android:src="@drawable/right" />
            </RelativeLayout>
        </LinearLayout>





    </LinearLayout>


</LinearLayout>
