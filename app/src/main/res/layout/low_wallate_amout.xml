<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_gravity="center_horizontal"

 >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/top_curved_dialog"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Low Wallet Amount"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:padding="10dp"
                android:textSize="14dp" />
            <ImageView
                android:id="@+id/xIvClearWallet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clear"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet amount is less than the entry fee."
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginTop="15dp"
                    android:gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textwalletsubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Go To Wallet"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/gray_rounded_background"
            android:layout_marginTop="15dp"
            android:textSize="12dp"
            android:gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
